{
  "name": "mindful-map-backend",
  "version": "1.0.0",
  "description": "Backend for Mindful Map mobile app",
  "main": "src/app.js",
"scripts": {
  "start": "concurrently \"node src/app.js\" \"python main.py\"",
  "dev": "nodemon src/app.js",
  "node": "node src/app.js",
  "node:dev": "nodemon src/app.js",
  "python": "gunicorn main:app --bind 0.0.0.0:5001",
  "test:db": "node src/utils/db-test.js",
  "test:firebase-simple": "node src/utils/firebase-simple-test.js",
  "test:login": "node src/utils/test-login-simulation.js"
},
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cloudinary": "^1.41.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "firebase-admin": "^13.5.0",
    "moment": "^2.30.1",
    "mongoose": "^8.18.2",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^4.0.0",
    "node-cron": "^4.2.1",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10"
  }
}
